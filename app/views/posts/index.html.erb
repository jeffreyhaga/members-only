<h1>All Posts</h1>

<ul>
    <% @posts.each do |post| %>
        <li>
            <% if user_signed_in? %>
                Username: <%= post.username %> <br>
                Post: <%= post.content %>
            <% else %>
                <%= post.content %>
            <% end %>
        </li>
    <% end %>
</ul>